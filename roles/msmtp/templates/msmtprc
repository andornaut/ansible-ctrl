account default

host {{ msmtp_host }}
port {{ msmtp_port }}
domain {{ msmtp_domain }}

auth on
user {{ msmtp_user }}
password {{ msmtp_password_INSECURE }}

tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# https://marlam.de/msmtp/msmtp.html#Commands-specific-to-sendmail-mode
from %U@{{ msmtp_domain }}
aliases /etc/aliases

# Deprecated in 1.8.7
auto_from on
maildomain {{ msmtp_domain }}

syslog LOG_MAIL
